<main class="ps-3">
    <div class="row">
        {{#with navigation}}
        {{#each links}}
        <div class="col-1">
            <div class="nav">
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link active">{{text}}</a>
                </div>
            </div>
        </div>
        {{/each}}
        <div class="col-2 mt-2">
            <div class="nav-item">
                <a href="#" class="nav-link disabled">Disabled</a>
            </div>
        </div>
    </div>
    {{/with}}
    <div>
        <hr class="mb-5">
    </div>
    <div class="col-3">
        {{#with header}}
        <h1>{{title}}</h1>
        {{#with button}}
        <a class="btn btn-outline-secondary mt-3" href="link">{{text}}</a>
        {{/with}}
        {{/with}}
    </div>
    <div>
        <hr class="mt-5 mb-5">
    </div>
    {{>cartGoodsItem}}
    <div>
        <hr class="mt-5 mb-5">
    </div>
    <div class="col-4">
        {{#with total}}
        <h3>{{title}}</h3>
        <div class="display-5">{{amount}}</div>
        <p class="mt-2">{{delivery}}</p>
        <div class="col-4">
            {{#each buttons}}
            <a class="btn 
        {{#if isSuccess}}btn-success{{/if}}
        {{#if isOutline}}btn-outline-success{{/if}} mt-2" href="{{link}}">
                {{text}}
            </a>
            {{/each}}
        </div>
        {{/with}}
    </div>
    <div>
        <hr class="mt-5 mb-5">
    </div>
    {{#with goodsOtherBlock}}
    <h3 class="text-center mb-3">{{title}}</h3>
    <div class="row row-cols-1 row-cols-md-3 g-2">
        {{#each cards}}
        <div class="col">
            <div class="card h-100">
                <img src="{{image}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        {{title}}
                        {{#if isHot}}<span class="badge text-bg-warning rounded-pill text-uppercase">Hot!</span>{{/if}}
                        {{#if isNew}}<span class="badge text-bg-primary rounded-pill">New</span>{{/if}}
                    </h5>
                    <p class="card-text">{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}
    <div>
        <hr class="mt-5 mb-5">
    </div>
    {{#with subscribe}}
    <div class="row">
        <div class="col-12">
            <div class="card text-bg-dark mb-3">
                <div class="card-header">
                    <h2>{{header}}</h2>
                </div>
                <div class="card-body">
                    <p class="card-text">{{description}}</p>
                    {{#each buttons}}
                    <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    {{/with}}
    <div>
        <hr class="mt-5">
    </div>
    <div class="nav">
   {{#each footer}}
      <div class="nav-item">
         {{#each this}}
           <a class="{{#if @last}}disabled{{/if}}nav-link" href="{{link}}">{{text}}<a>
         {{/each}}
     </div>
   {{/each}}
</div>
</main>