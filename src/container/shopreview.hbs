<main class="ps-3">
    {{#with navigation}}
    <div class="row">
        {{#each links}}
        <div class="col-auto">
            <div class="nav">
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link active">{{text}}</a>
                </div>
            </div>
        </div>
        {{/each}}
        <div class="col-2 mt-2">
            <div class="nav-item">
                <a href="#" class="nav-link disabled">Disabled</a>
            </div>
        </div>
    </div>
    {{/with}}
    <hr class="mb-5">
    <div class="row">
        <div class="col-8">
            {{#with formBlock}}
            <div class="display-4 col-8"><strong>{{header}}</strong></div>
            {{#with rating}}
            <div class="mb-3 mt-3 col-8">{{title}} : {{value}}</div>
            {{/with}}
            {{#with actionBlock}}
            <div class="nav nav-tabs mb-5 col-8">
                <div class="row">
                    {{#each tabs}}
                    <div class="col-auto">
                        <div class="nav-item">
                            <a class="{{#if isActive}}nav-link active{{/if}} nav-link" href="#">{{text}}</a>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="col-8">
                <hr class="mb-5 mt-5">
            </div>
            {{#with report}}
            <div class="card mt-5 col-8">
                <div class="card-body">
                    <p>{{title}}</p>
                    {{#with button}}
                    <a class="btn btn-secondary" href="{{link}}">{{text}}</a>
                    {{/with}}
                </div>
            </div>
            {{/with}}
            {{/with}}
            <div class="col-8">
                <hr class="mb-5 mt-5">
            </div>
            {{#with feedbackBlock}}
            <div class="display-5 col-8 mb-5"><strong>{{title}}</strong></div>
            <div class="col-8">
                {{#each buttons}}
                <a class="btn {{#if isWarning}}btn-warning{{/if}}{{#if isSuccess}}btn-success{{/if}}{{#if isDanger}}btn-danger{{/if}} me-3"
                    href="{{link}}">{{text}}</a>
                {{/each}}
            </div>
            {{/with}}
        </div>
        {{#with goodsInfo}}
        <div class="col-4">
            <div class="card col-8 mb-3">
                <img src="{{photo}}" class="card-img-top" alt="Laptop">
                <div class="card-body">
                    <p class="card-text"><strong>{{name}}</strong></p>
                </div>
            </div>
            <div class="card col-8 mb-3">
                <div class="card-body">
                    <p class="card-text"><strong>{{price}}</strong></p>
                    <p>{{#if inMarket}}Є в наявності{{/if}}</p>
                    {{#each buttons}}
                    <div class="col-auto">
                        <a
                            class="btn {{#if isPrimary}}btn-primary{{/if}}{{#if isSecondary}}btn-secondary{{/if}} mb-2">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{#with seller}}
            <div class="card col-8">
                <div class="card-body">
                    <p class="card-text"><strong>{{title}} : {{value}}</strong></p>
                </div>
            </div>
            {{/with}}
        </div>
        {{/with}}
        {{/with}}
    </div>
    <hr class="mb-5 mt-5">
    <div class="row">
        {{#each reviewList}}
        <div class="card p-3 mb-5">
            <div class="card">
                <ul class="list-group list-group-flush mb-5">
                    {{#with title}}
                    <li class="list-group-item">
                        <b>{{userName}}</b>
                        <p>{{caption}}</p>
                        <div class="text-muted">{{date}}</div>
                    </li>
                    {{/with}}
                    {{#with reviewBody}}
                    <li class="list-group-item">
                        {{#with seller}}
                        <p class="mb-4">{{title}} : {{value}}</p>
                        {{/with}}
                        {{#with rating}}
                        <p class="mb-4">{{title}} : {{value}}</p>
                        {{/with}}
                        {{#each text}}
                        <p class="mb-4">{{this}}</p>
                        {{/each}}
                        {{#with advantages}}
                        <p class="mb-4"><b>{{title}}</b> :<br> {{text}}</p>
                        {{/with}}
                        {{#with disadvantages}}
                        <p class="mb-4"><b>{{title}}</b> :<br> {{text}}</p>
                        {{/with}}
                        {{#each images}}
                        <img src="{{this}}" class="me-2">
                        {{/each}}
                    </li>
                </ul>
            </div>
            {{#each coments}}
            <div class="mt-4 mb-4">
                <div class="card ms-5">
                    <div class="card-body">
                        <p class="text-lg"><b>{{userName}}</b></p>
                        <p class="text-muted">{{date}}</p>
                        <p class="text-sm">{{text}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/with}}
        </div>
        {{/each}}
    </div>
    {{#with service}}
    <div class="card">
        <div class="card-body text-center text-bg-success">
            <div class="h2">{{title}}</div>
            <p>{{description}}</p>
            {{#each buttons}}
            <a class="btn btn-primary" href="{{link}}">{{text}}</a>
            {{/each}}
        </div>
    </div>
    {{/with}}
    <hr class="mt-5">
    <div class="nav">
        {{#each footer}}
        <div class="nav-item">
            {{#each this}}
            <a class="{{#if @last}}disabled{{/if}} nav-link" href="{{link}}">{{text}}<a>
                    {{/each}}
        </div>
        {{/each}}
    </div>

</main>