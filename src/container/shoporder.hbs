        <hr>
    </div>
    <div class="h1 mb-5">{{header}}</div>
    <div class="row">
        <div class="col-8">
            <div class="row">
                {{#with contacts_data}}
                <div class="h3 col-8">{{title}}</div>
                <div class="col-8">
                    {{#each buttons}}
                    <button
                        class="btn {{#if isPrimary}}btn-warning text-light me-2{{/if}}{{#if isOutline}}btn-outline-warning text-orange{{/if}}">{{text}}
                    </button>
                    {{/each}}
                </div>
            </div>
            {{#with form}}
            <div class="row">
                {{#with input.surname}}
                <div class="col-4 mt-3">
                    <label class="form-label">{{label}}</label>
                    <input type="text" class="form-control" placeholder="{{placeholder}}" aria-label="Username"
                        aria-describedby="addon-wrapping">
                    <div class="form-text">{{caption}}</div>
                </div>
                {{/with}}
                {{#with input.name}}
                <div class="col-4 mt-3">
                    <label class="form-label">{{label}}</label>
                    <input type="text" class="form-control" placeholder="{{placeholder}}" aria-label="Username"
                        aria-describedby="addon-wrapping">
                    <div class="form-text">{{caption}}</div>
                </div>
                {{/with}}
            </div>
            <div class="row">
                {{#with input.phone}}
                <div class="col-4 mt-3">
                    <label class="form-label">{{label}}</label>
                    <input type="text" class="form-control" placeholder="{{placeholder}}" aria-label="Username"
                        aria-describedby="addon-wrapping">
                    <div class="form-text">{{caption}}</div>
                </div>
                {{/with}}
                {{#with input.email}}
                <div class="col-4 mt-3">
                    <label class="form-label">{{label}}</label>
                    <input type="text" class="form-control" placeholder="{{placeholder}}" aria-label="Username"
                        aria-describedby="addon-wrapping">
                    <div class="form-text">{{caption}}</div>
                </div>
                {{/with}}
            </div>
            <div class="row">
                <div class="col-8">
                    <hr class="my-5 mt-3">
                </div>
            </div>
            {{#each switch}}
            <div class="col-8">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch">
                    <label class="form-check-label">{{text}}</label>
                </div>
            </div>
            {{/each}}
            {{/with}}
            {{/with}}
        </div>
        <div class="col-4 pe-5">
            <div class="card">
                {{#each action_block}}
                <div class="card-body">
                    <p
                        class="card-text {{#if isSuccess}}text-bg-success text-light me-2{{/if}}{{#if isDanger}}text-bg-danger text-light{{/if}}{{#if isInfo}}text-bg-info text-light{{/if}}">
                        {{text}}
                    </p>
                </div>
                {{/each}}
            </div>
            {{#with total}}
            <div class="card">
                <ul class="card-body">
                    <h3 class="card-title p-3">{{title}}</h3>
                    {{#each item_list}}
                    <li class="list-group-item">
                        {{name}}: {{price}}
                    </li>
                    {{/each}}
                    <hr>
                    {{#each additional_info}}
                     <li class="list-group-item">
                        {{text}}: {{value}}
                    </li>
                    {{/each}}
                    <hr>
                    {{#with total_price}}
                    <li class="list-group-item">
                        {{text}}: {{value}}
                    </li>
                    {{/with}}
                    <hr>
                    {{#each button}}
                    <button
                        class="btn {{#if isPrimary}}btn-primary text-light me-2{{/if}}{{#if isOutline}}btn-outline-primary text-orange{{/if}}">{{text}}
                    </button>
                    {{/each}}
                </ul>
            </div>
            {{/with}}
        </div>
    </div>
    </div>
