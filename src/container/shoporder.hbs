<main class="ps-3">
    <div class="row">
        {{#with navigation}}
        {{#each links}}
        <div class="col-2">
            <div class="nav">
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link active">{{text}}</a>
                </div>
            </div>
        </div>
        {{/each}}
        <div class="col-2 mt-2">
            <div class="nav-item">
                <a href="#" class="nav-link disabled">Disabled</a>
